{
	"defaultSeverity": "warning",
	"extends": [
		"tslint:recommended",
		"tslint-react",
		"tslint-eslint-rules",
		"tslint-config-prettier"
	],
	"rulesDirectory": [
		"tslint-plugin-prettier"
	],
	"rules": {
		"array-type": [
			true,
			"array-simple"
		],
		"arrow-parens": [
			true,
			"ban-single-arg-parens"
		],
		"no-console": false,
		"no-var-keyword": true,
		"no-namespace": false,
		"ordered-imports": [
			false,
			{
				"import-sources-order": "lowercase-last",
				"named-imports-order": "lowercase-first"
			}
		],
		"trailing-comma": [
			true,
			{
				"multiline": {
					"arrays": "always",
					"functions": "ignore",
					"// objects": "ignore because tslint treats object destructuring as objects, but prettier doesn't put a comma in there.",
					"objects": "ignore",
					"typeLiterals": "ignore"
				},
				"singleline": "never",
				"specCompliant": true
			}
		],
		"class-name": false,
		"comment-format": [
			true,
			"check-space"
		],
		"interface-name": false,
		"max-classes-per-file": [
			true,
			10
		],
		"member-access": false,
		"member-ordering": [
			false,
			{
				"order": [
					"static-field",
					"static-method",
					"instance-field",
					"constructor",
					"public-instance-method",
					"protected-instance-method",
					"private-instance-method"
				]
			}
		],
		"no-eval": true,
		"no-empty-interface": false,
		"no-internal-module": true,
		"no-trailing-whitespace": true,
		"no-unsafe-finally": true,
		"object-literal-sort-keys": false,
		"one-line": [
			true,
			"check-open-brace",
			"check-whitespace"
		],
		"quotemark": [
			true,
			"double"
		],
		"semicolon": [
			true,
			"always",
			"ignore-bound-class-methods"
		],
		"triple-equals": [
			true,
			"allow-null-check"
		],
		"typedef-whitespace": [
			true,
			{
				"call-signature": "nospace",
				"index-signature": "nospace",
				"parameter": "nospace",
				"property-declaration": "nospace",
				"variable-declaration": "nospace"
			}
		],
		"variable-name": [
			true,
			"ban-keywords"
		],
		"whitespace": [
			true,
			"check-branch",
			"check-decl",
			"check-operator",
			"check-separator",
			"check-type"
		]
	},
	"jsRules": {
		"triple-equals": [
			true,
			"allow-null-check"
		]
	}
}